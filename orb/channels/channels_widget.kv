#:import prefs_col orb.misc.utils.prefs_col


<ChannelsWidget>:
    size_hint: 3, 3
    pos: [-self.width/10, -self.height/10]
    canvas:
        Color:
            rgba: 0, 1, 0, (0.1 * (app.config['debug']['layouts'] == '1'))
        Rectangle:
            size: self.size
    RelativeLayout:
        id: relative_layout
        size: [0, 0]
        pos: [root.size[0]/2, root.size[1]/2]
        size_hint: None, None
        canvas:
            Color:
                rgba: 1, 0, 0, (0.1 * (app.config['debug']['layouts'] == '1'))
            Rectangle:
                pos: self.pos
                size: self.size

<ChannelsScreen>:
    name: 'channels'
    FloatLayout:
        canvas:
            Color:
                rgba: prefs_col('display.channels_background_color')
            Rectangle:
                size: self.size
                pos: self.pos
        RelativeLayout:
            id: cw_layout
        AttributeEditor:
            id: attribute_editor
            pos: (root.width - self.width, 0)
            size_hint_x: 0.2
    HUD:
        id: hud

