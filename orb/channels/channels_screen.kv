#:import prefs_col orb.misc.utils.prefs_col
#:import Lnd orb.lnd.Lnd

<ChannelsScreen>:
    name: 'channels'
    FloatLayout:
        canvas:
            Color:
                rgba: prefs_col('display.channels_background_color')
            Rectangle:
                size: self.size
                pos: self.pos
        RelativeLayout:
            id: cw_layout
        MDNavigationLayout:
            MDNavigationDrawer:
                anchor: "right"
                id: nav_drawer
                md_bg_color: 1, .3, .4, (0.1 * (app.config['debug']['layouts'] == '1'))
                AttributeEditor:
                    id: content_drawer
    HUD:
        id: hud


<ItemDrawer>
    text_color: [1, 1, 1, 1]

    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: [1, 1, 1, 1]

