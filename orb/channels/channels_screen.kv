#:import prefs_col orb.misc.utils.prefs_col

<ChannelsScreen>:
    name: 'channels'
    FloatLayout:
        canvas:
            Color:
                rgba: prefs_col('display.channels_background_color')
            Rectangle:
                size: self.size
                pos: self.pos
        RelativeLayout:
            id: cw_layout
        Widget:
            id: gestures_overlay
            size_hint: 1, 1
        HUD:
            id: hud
        MDNavigationLayout:
            MDNavigationDrawer:
                anchor: "right"
                id: nav_drawer
                md_bg_color: 0, 0, 0, 0.5
                AttributeEditor:
                    id: content_drawer


<ItemDrawer>
    text_color: [1, 1, 1, 1]

    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: [1, 1, 1, 1]

