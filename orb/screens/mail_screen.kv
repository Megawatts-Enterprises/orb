<FocusTextInput>:

<MailScreen>:
    name: 'mail'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.2
            ScrollView:
                size_hint: 1, 1
                pos_hint: {'center_x': .5, 'center_y': .5}
                GridLayout:
                    id: contact_list
                    cols: 1
                    padding: 10
                    spacing: 10
                    size_hint: 1, None
                    height: self.minimum_height
                    do_scroll_x: False

        FocusTextInput:
            id: input
            size_hint_x: 0.8
