<AttributeEditor>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "right"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "30dp", "30dp"
            source: "images/ln.png"

    MDLabel:
        text: root.alias
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: root.identity_pubkey
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    MDTextField:
        text: '{:_}'.format(root.channel.earned if root.channel else 0)
        helper_text: 'Earned'
        helper_text_mode: 'persistent'

    ScrollView:
        DrawerList:
            id: md_list
