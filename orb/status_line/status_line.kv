#:import dp kivy.metrics.dp

########################################################################################
# STATUS LINE IO
########################################################################################

<StatusLineOutput>
    text: root.output
    multiline: True
    size_hint: 0, 1
    width: self.texture_size[0]
    halign: "left"
    valign: "top"


########################################################################################
# STATUS LINE
########################################################################################

<StatusLine>
    id: status_line
    height: dp(25)
    size_hint_y: None
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 55 / 255, 55 / 255, 55 / 255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDRaisedButton:
        text: 'se'
        size_hint_x: None
        width: dp(25)
        size_hint_y: 1
        md_bg_color: 0.3,0.3,0.3,1
        on_release: app.root.ids.sm.current = 'console'
    StatusLineOutput:
        id: line_output
