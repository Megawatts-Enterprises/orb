#:import dp kivy.metrics.dp

########################################################################################
# STATUS LINE IO
########################################################################################

<StatusLineOutput>
    text: root.output
    foreground_color: 1, 1, 1, 1
    multiline: True
    background_color: (70 / 255, 70 / 255, 70 / 255, 1) if self.focus else (55 / 255, 55 / 255, 55 / 255, 1)
    width: dp(25)
    size_hint_y: 1


########################################################################################
# STATUS LINE
########################################################################################

<StatusLine>
    id: status_line
    height: dp(25)
    size_hint_y: None
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 55 / 255, 55 / 255, 55 / 255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDRaisedButton:
        text: 'se'
        size_hint_x: None
        width: dp(25)
        size_hint_y: 1
        md_bg_color: 0.3,0.3,0.3,1
        on_release: app.root.ids.sm.current = 'console'
    StatusLineOutput:
        id: line_output
