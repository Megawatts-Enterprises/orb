
<CopyKeys>:
    title: 'Copy Keys'
    ScrollView:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        GridLayout:
            cols: 1
            padding: 10
            spacing: 10
            size_hint: 1, None
            height: self.minimum_height
            do_scroll_x: False
            MDLabel:
                text: 'Copy TLS Cert, Macaroon, and set connection settings for LND API to connect to your node.'
                size_hint_y: None
                height: self.texture_size[1]
                multiline: True
            Splitter:
                horizontal: True
                size_hint_y: None
                height: dp(10)
            MDRaisedButton:
                text: 'Copy keys'
                on_release: root.copy_keys()
                size_hint_y: None
                size_hint_x: None
                width: dp(100)
                height: dp(40)
                md_bg_color: 0.3,0.3,0.3,1
