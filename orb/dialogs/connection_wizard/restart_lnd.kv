
<RestartLND>:
    title: 'Restart LND'
    ScrollView:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        GridLayout:
            cols: 1
            padding: 10
            spacing: 10
            size_hint: 1, None
            height: self.minimum_height
            do_scroll_x: False
            MDLabel:
                text: 'LND needs restarting to generate new TLS certs.'
                size_hint_y: None
                height: dp(50)
            Splitter:
                horizontal: True
                size_hint_y: None
                height: dp(10)
            MDRaisedButton:
                text: 'Restart LND'
                on_release: root.restart_lnd()
                size_hint_y: None
                size_hint_x: None
                width: dp(100)
                height: dp(40)
                
            FocusTextInput:
                id: input
                size_hint_x: .9
                size_hint_y: None
                height: dp(300)
