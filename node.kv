#:import pref utils.pref

<Node@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    font_size: pref('display.node_alias_font_size')
    canvas.before:
        Color: 
            rgba: (0.3,0.3,0.9,1)
        RoundedRectangle:
            size: (pref('display.node_width')+2, pref('display.node_height')+2)
            pos: [self.pos[0]-1, self.pos[1]-1]
            radius: [8]
        Color: 
            rgba: root.col
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [8]
            size: (pref('display.node_width'), pref('display.node_height'))
        PushMatrix
        Scale:
            origin: self.center
            xyz: .1, .1, 1
    canvas.after:
        PopMatrix
